<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Calificaciones">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:background="@color/color">

                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:layout_weight="1"
                    />
            </LinearLayout>

            <LinearLayout
                android:padding="@dimen/activity_horizontal_margin"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:background="@color/colorAccent"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:drawablePadding="@dimen/activity_horizontal_margin"
                    android:layout_height="wrap_content"
                    android:layout_weight="0"
                    android:layout_marginTop="22dp"
                    android:layout_marginRight="34dp"
                    android:layout_marginLeft="14dp"
                    android:textSize="32dp"
                    android:text="Mis calificaciones"
                    android:textColor="@color/text"/>

                <TextView
                    android:id="@+id/materia1"
                    android:layout_width="wrap_content"
                    android:drawablePadding="@dimen/activity_horizontal_margin"
                    android:layout_height="wrap_content"
                    android:layout_weight="0"
                    android:layout_marginTop="22dp"
                    android:layout_marginRight="34dp"
                    android:layout_marginLeft="14dp"
                    android:textSize="25dp"
                    android:text="Matematica discretas"
                    android:textColor="@color/text"/>
                <TextView
                    android:id="@+id/materia2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawablePadding="@dimen/activity_horizontal_margin"
                    android:layout_weight="0"
                    android:layout_marginTop="22dp"
                    android:layout_marginRight="34dp"
                    android:layout_marginLeft="14dp"
                    android:textSize="25dp"
                    android:text="Programacion 1"
                    android:textColor="@color/text"/>
                <TextView
                    android:id="@+id/materia3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="14dp"
                    android:layout_marginTop="22dp"
                    android:layout_marginRight="34dp"
                    android:layout_weight="0"
                    android:drawablePadding="@dimen/activity_horizontal_margin"
                    android:text="Matematicas 2"
                    android:textColor="@color/text"
                    android:textSize="25dp" />

            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</android.support.constraint.ConstraintLayout>